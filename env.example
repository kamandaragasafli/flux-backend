# Django Settings
DJANGO_SECRET_KEY=change-me-in-production-generate-a-secure-key
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration
# Local development için SQLite kullan (true)
# Server/Production için PostgreSQL kullan (false)
USE_SQLITE=true

# PostgreSQL ayarları (USE_SQLITE=false olduğunda gerekli)
DB_NAME=flux_tracker
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=false
# If CORS_ALLOW_ALL_ORIGINS is false, add specific origins in settings.py CORS_ALLOWED_ORIGINS

# Security Settings (Production)
SECURE_SSL_REDIRECT=true

